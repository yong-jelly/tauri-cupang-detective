{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "opener:default",
        "dialog:default",
        "dialog:allow-open",
        {
            "identifier": "http:default",
            "allow": [{ "url": "http://*/*" }, { "url": "https://*/*" }],
            "scope": [{ "url": "http://*/*" }, { "url": "https://*/*" }]
        }
    ]
}